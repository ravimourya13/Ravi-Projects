<%- include('partials/header') %>

<div class="container">
  <div class="row justify-content-center align-items-center g-2">
    <div class="col">
      <div class="card">
        <div class="card-body">
          <center><h2>Edit Blog</h2></center>
          <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="form-floating mb-3">
              <input
                type="text"
                class="form-control"
                name="title"
                id="formId1"
                placeholder="Title"
                value="<%= blog.title %>"
                required
              />
              <label for="formId1">Title</label>
            </div>

            <div class="form-floating mb-3">
              <input
                type="url"
                class="form-control"
                name="imageUrl"
                id="formId1"
                placeholder="Image Url"
                value="<%= blog.imageUrl %>"
                required
              />
              <label for="formId1">Image url</label>
            </div>

            <div class="form-floating mb-3">
              <input
                type="text"
                class="form-control"
                name="content"
                id="formId1"
                placeholder="Content"
                value="<%= blog.content %>"
                required
              />
              <label for="formId1">Content</label>
            </div>

            <center>
              <button type="submit" class="btn btn-primary">Update</button>
            </center>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
